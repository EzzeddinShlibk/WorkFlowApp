<div class="topbar">

    <nav class="navbar-custom">
        <ul class="list-unstyled topbar-nav float-end mb-0">


            <li class="dropdown notification-list">
                <a class="nav-link dropdown-toggle arrow-none waves-light waves-effect" data-bs-toggle="dropdown" href="#" role="button"
                   aria-haspopup="false" aria-expanded="false">
                    <i data-feather="bell" class="align-self-center topbar-icon"></i>
                    <span class="badge bg-danger rounded-pill noti-icon-badge">2</span>
                </a>
                <div class="dropdown-menu dropdown-menu-end dropdown-lg pt-0">
                    <div class="notification-menu" data-simplebar>

                        <a href="#" class="dropdown-item py-3">

                            <div class="media">

                                <div class="media-body align-self-center ms-2 text-truncate">
                                    <h6 class="my-0 fw-normal text-dark">لايوجد إشعارات</h6>

                                </div>
                            </div>
                        </a>

                    </div>
                    <a href="javascript:void(0);" class="dropdown-item text-center text-primary">
                        عرض الكل<i class="fi-arrow-right"></i>
                    </a>
                </div>
            </li>
            <li class="dropdown">


                @if (_signInManager.IsSignedIn(User))
                {


                    <a class="nav-link dropdown-toggle waves-effect waves-light nav-user" data-bs-toggle="dropdown" href="#" role="button"
                       aria-haspopup="false" aria-expanded="false">

                        <span class="ms-1 nav-user-name hidden-sm">@ViewBag.UserName</span>

                        @if (ViewBag.UserImg == null)
                        {
                            <img src="~/images/users/profile.png" alt="profile-user" class="rounded-circle thumb-xs" />

                        }
                        else
                        {
                            <img src="~/images/users/@(ViewBag.UserImg).jpg" alt="profile-user" class="rounded-circle thumb-xs" />

                        }
                    </a>

                }
    




                <div class="dropdown-menu dropdown-menu-end">

                    <a class="dropdown-item" asp-action="Profile" asp-controller="Account" asp-route-UserId="@_userManager.GetUserId(User)"><i data-feather="user" class="align-self-center icon-xs icon-dual me-1"></i> الملف الشخصي</a>
                    <div class="dropdown-divider mb-0"></div>
                    <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account"><i data-feather="user" class="align-self-center icon-xs icon-dual me-1"></i> تغيير كلمة المرور </a>

                    <div class="dropdown-divider mb-0"></div>
                    <a asp-action="Index" asp-controller="Home" class="dropdown-item"><i data-feather="power" class="align-self-center icon-xs icon-dual me-1"></i> تسجيل الخروج</a>
                </div>
            </li>
        </ul>
        <ul class="list-unstyled topbar-nav mb-0">
            <li>
                <button class="nav-link button-menu-mobile">
                    <i data-feather="menu" class="align-self-center topbar-icon"></i>
                </button>
            </li>
        </ul>
    </nav>
    <!-- end navbar-->
</div>



