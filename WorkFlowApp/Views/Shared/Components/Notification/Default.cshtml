@model List<ProjectTask>
<a class="nav-link dropdown-toggle arrow-none waves-light waves-effect" data-bs-toggle="dropdown" href="#" role="button"
   aria-haspopup="false" aria-expanded="false">
    <i data-feather="bell" class="align-self-center topbar-icon"></i>
    @if (@ViewBag.NotificationsCount > 0)
    {
        <span class="badge bg-danger rounded-pill noti-icon-badge">@ViewBag.NotificationsCount</span>
    }
</a>
<div class="dropdown-menu dropdown-menu-end dropdown-lg pt-0">
    <h6 class="dropdown-item-text font-15 m-0 py-3 border-bottom d-flex justify-content-between align-items-center">
        الإشعارات <span class="badge bg-primary rounded-pill">@ViewBag.NotificationsCount</span>
    </h6>


    <div class="notification-menu" data-simplebar>


        @foreach (var item in Model)
        {

            <a asp-controller="ProjectTasks" asp-action="EditTask" asp-route-id="@item.Id" class="dropdown-item py-3">
                <small class="float-end text-muted ps-2">@item.CreatedDate.ToShortDateString()</small>
                <div class="media">
                    <div class="avatar-md bg-soft-primary">
                        <i class="mdi mdi-flag align-self-center icon-xs text-@item.priority.Color"></i>
                    </div>
                    <div class="media-body align-self-center ms-2 text-truncate">
                        <h6 class="my-0 fw-normal text-dark">@item.Name</h6>
                        <small class="text-muted mb-0">@item.Description</small>
                    </div>
                </div>
            </a>

        }


    </div>
    <!-- All-->
    <a href="javascript:void(0);" class="dropdown-item text-center text-primary">
        الكل عرض <i class="fi-arrow-right"></i>
    </a>
</div>
