@model ProjectViewModel





<div class="container-fluid">
    @Html.Partial("_create",Model.Project);

    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title"> المشاريع</h4>


                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <h5 class="mt-0">قائمة بالمشاريع المراد ادارتها. <span class="badge badge-pink">6</span></h5>
                    </li>
                </ul>
            </div>

            <div class="col-lg-6 text-end">
                <div class="text-end">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <div class="input-group">
                                <input type="text" id="example-input1-group2" name="example-input1-group2" class="form-control form-control-sm" placeholder="بحث">
                                <button type="button" class="btn btn-soft-primary btn-sm"><i class="fas fa-search"></i></button>
                            </div>
                        </li>
                        <li class="list-inline-item">
                            <button type="button" class="btn btn-soft-primary btn-sm"><i class="fas fa-filter"></i></button>
                        </li>
                        <li class="list-inline-item">
                            <button type="button" data-bs-toggle="modal" data-bs-target="#AddProject" class="btn btn-soft-primary btn-sm">
                                إضافة مشروع جديد
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">

            @{
                int i = 0;
                foreach (var item in Model.projects)
                {
                    i++;

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="media mb-3">
                                    <img src="~/images/widgets/project2.png" alt="" class="thumb-md ">
                                    <div class="media-body align-self-center text-truncate ms-3">
                                        <h4 class="m-0 fw-semibold text-dark font-15">@item.Name</h4>
                                        <p class="text-muted  mb-0 font-13"><span>@item.Description</span></p>
                                    </div><!--end media-body-->
                                </div>
                                <hr class="hr-dashed">
                                <div class="d-flex justify-content-between mb-3">
                                    <h6 class="fw-semibold m-0">الموعد النهائي :<span class="text-muted fw-normal">@item.EndDate.Date.ToString("yyyy-MM-dd")</span> </h6>
                                    <span class="badge badge-soft-success  fw-semibold ms-2"><i class="far fa-fw fa-clock"></i> باقي 35 يوم  </span>
                                </div>
                                <div>
                                    <p class="text-muted text-end mb-1">15% مكتمل</p>
                                    <div class="progress mb-4" style="height: 4px;">
                                        <div class="progress-bar bg-purple" role="progressbar" style="width: 15%;" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <div class="d-flex justify-content-start">

                                        <ul class="list-inline mb-0 align-self-center">
                                            <li class="list-item d-inline-block">
                                                <a class="ms-2" href="#">
                                                    <span class="text-muted fw-bold">4</span>
                                                    <i class="mdi mdi-format-list-bulleted text-muted font-18" data-toggle="tooltip" data-placement="bottom" title="عدد المهام للمشروع"></i>
                                                </a>
                                            </li>

                                            <li class="list-item d-inline-block">
                                                <a class="ms-2" href="#">
                                                    <i class="mdi mdi-pencil-outline text-muted font-18" data-bs-toggle="modal" data-bs-target="#EditProject" data-toggle="tooltip" data-placement="bottom" title="تعديل المشروع"></i>
                                                </a>
                                            </li>
                                            <li class="list-item d-inline-block">
                                                <a class="" href="#">
                                                    <i class="mdi mdi-trash-can-outline text-muted font-18" data-toggle="tooltip" data-placement="bottom" title="حذف المشروع"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div><!--end task-box-->
                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div>

                    <!--end col-->
                }









            }





















            <div class="modal" id="EditProject">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title" style="font-family:Cairo">تعديل مشروع</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="projectName" class="form-label">الإسم</label>
                                <input type="text" class="form-control" id="projectName" placeholder="أدخل إسم المشروع">
                            </div>
                            <div class="mb-3">
                                <label for="projectDescription" class="form-label">الوصف</label>
                                <textarea class="form-control" id="projectDescription" placeholder="وصف للمشروع" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="startDate" class="form-label">تاريخ البداية</label>
                                <input type="date" class="form-control" id="startDate">
                            </div>
                            <div class="mb-3">
                                <label for="endDate" class="form-label">تاريخ النهاية</label>
                                <input type="date" class="form-control" id="endDate">
                            </div>
                            <div class="mb-3">
                                <label for="userInput" class="form-label">إضافة المستخدمين</label>
                                <select multiple class="form-control" id="userInput">
                                    <!-- خيارات المستخدمين تضاف هنا -->
                                </select>
                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">تعديل</button>
                            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">ارشفة</button>
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">إغلاق</button>
                        </div>


                    </div>
                </div>
            </div>
        </div>





























        <div class="modal fade" id="EditProject" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="font-family:Cairo">تعديل مشروع</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="projectName" class="form-label">الإسم</label>
                            <input type="text" class="form-control" id="projectName" placeholder="أدخل إسم المشروع">
                        </div>
                        <div class="mb-3">
                            <label for="projectDescription" class="form-label">الوصف</label>
                            <textarea class="form-control" id="projectDescription" placeholder="وصف للمشروع" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="startDate" class="form-label">تاريخ البداية</label>
                            <input type="date" class="form-control" id="startDate">
                        </div>
                        <div class="mb-3">
                            <label for="endDate" class="form-label">تاريخ النهاية</label>
                            <input type="date" class="form-control" id="endDate">
                        </div>
                        <div class="mb-3">
                            <label for="userInput" class="form-label">إضافة المستخدمين</label>
                            <select multiple class="form-control" id="userInput">
                                <!-- خيارات المستخدمين تضاف هنا -->
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">تعديل</button>
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">ارشفة</button>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">إغلاق</button>
                    </div>
                </div>
            </div>
        </div>





    </div><!--end row-->


</div><!-- container -->
@section styles {
    <!-- Plugins css -->
    <link href="~/lib/select2/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/huebee/huebee.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/timepicker/bootstrap-material-datetimepicker.css" rel="stylesheet">
    <link href="~/lib/bootstrap-touchspin/css/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />
}

@section scripts {
    <!-- Plugins js -->
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/lib/huebee/huebee.pkgd.min.js"></script>
    <script src="~/lib/timepicker/bootstrap-material-datetimepicker.js"></script>
    <script src="~/lib/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/lib/bootstrap-touchspin/js/jquery.bootstrap-touchspin.min.js"></script>
    <script src="~/js/pages/jquery.forms-advanced.js"></script>
}