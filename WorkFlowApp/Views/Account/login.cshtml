@model LoginViewModel
@{
    Layout = string.Empty;
}
<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <title>WorkFlowApp - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- App css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="account-body accountbg">

    <!-- Log In page -->
    <div class="container" dir="rtl">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">   
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a  class="logo logo-admin">
                                        <img src="~/images/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white font-18">لنبدأ مع Flow Master</h4>
                                    <p class="text-muted  mb-0">قم بالتسجيل لتبدأ رحلتك مع Flow Master.</p>
                                </div>
                            </div>
                             
                            <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                                <form class="form-horizontal auth-form" asp-action="Login" asp-controller="Account">
                                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                                    <div class="form-group mb-2">
                                        <label class="form-label" asp-for="Email">إسم المستخدم </label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" asp-for="Email" id="username" placeholder="أدخل إسم المستخدم">
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>

                                    <div class="form-group mb-2">
                                        <label asp-for="Password" class="form-label" >كلمة المرور </label>
                                        <div class="input-group">
                                            <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="أدخل كلمة السر">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>

                                    <div class=" form-group mb-2 text-end">
                                        <div class="custom-control custom-switch switch-success">
                                            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customSwitchSuccess">
                                            <label class="form-label text-muted" asp-for="RememberMe">تذكرني</label>

                                        </div><!--end col-->
                                        <div class="form-group  text-center">
                                            <a asp-action="forgetPassword" asp-controller="Account" class="text-muted font-13"><i class="dripicons-lock"></i> نسيت كلمة المرور؟</a>
                                        </div><!--end col-->
                                    </div><!--end form-group-->

                                    <div class="form-group mb-0 row">
                                        <div class="col-12">
                                            <button class="btn btn-outline-purple w-100 waves-effect waves-light" type="submit">تسجيل الدخول <i class="fas fa-sign-in-alt ms-1"></i></button>
                                        </div>
                                    </div>
                                </form>
                                <div class="m-3 text-center text-muted">
                                    <p class="mb-0">ليس لديك حساب؟  <a  asp-action="RegisterAsk" asp-controller="Account" class="text-primary ms-2">Free Resister</a></p>
                                </div>
                        </div><!--end card-body-->
                        <div class="card-body bg-light-alt text-center">
                            <span class="text-muted d-none d-sm-inline-block">
                                Flow Master App © <script>
                                                      document.write(new Date().getFullYear())
                                </script>
                            </span>
                        </div>
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/feather.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
</body>
</html>