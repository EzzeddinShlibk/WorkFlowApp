@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="row">
                <div class="col-lg-5 mx-auto">
                    <div class="card">
                        <div class="card-body p-0 auth-header-box">
                            <div class="text-center p-3">
                                <a href="index.html" class="logo logo-admin">
                                    <img src="~/images/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                                </a>
                                <h4 class="mt-3 mb-1 fw-semibold text-white font-18">قم بالتسجيل لتبدأ رحلتك مع Flow Master</h4>
                                <p class="text-muted  mb-0">
                                    إنشاء فريق جديد

                                </p>

                            </div>
                        </div>



                        <div class="tab-pane active px-3 pt-3" id="Register_Tab" role="tabpanel">
                            <form asp-action="Register" class="form-horizontal auth-form" dir="rtl">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <input type="hidden" name="OldTeamID" value="@ViewBag.TeamID" />
                                <div class="form-group mb-2">
                                    <label asp-for="Email" class="form-label" >البريد الإلكتروني</label>
                                    <div class="input-group">
                                        <input asp-for="Email" type="email" class="form-control" id="useremail" placeholder="أدخل البريد الإلكتروني">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-2">
                                    <label asp-for="Password" class="form-label" >كلمة المرور</label>
                                    <div class="input-group">
                                        <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="أدخل كلمة المرور ">
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-2">
                                    <label asp-for="ConfirmPassword" class="form-label" >تأكيد كلمة المرور </label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control"  id="conf_password" placeholder="تأكيد كلمة المرور">
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class=" text-danger"></span>
                                </div>
                                <div class="form-group mb-0 row">
                                    <div class="col-12">
                                        <button class="btn btn-outline-purple w-100 waves-effect waves-light" type="submit">تسجيل <i class="fas fa-sign-in-alt ms-1"></i></button>
                                    </div>
                                </div>
                            </form>
                            <p dir="rtl" class="my-3 text-muted"> هل لديك حساب بالفعل ؟<a asp-action="Login" class="text-primary ms-2">  الدخول </a></p>
                        </div>

                    </div>
                    <div class="card-body bg-light-alt text-center">
                        <span class="text-muted d-none d-sm-inline-block">
                            WorkFlow © <script>
                                           document.write(new Date().getFullYear())
                            </script>
                        </span>
                    </div>

                </div>
            </div>
        </div><
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
