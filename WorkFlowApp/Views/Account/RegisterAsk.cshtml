@{
    Layout = string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>WorkFlowApp - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

   
    <link rel="shortcut icon" href="~/images/favicon.ico">

    
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />

</head>
<body class="account-body accountbg">

   
    <div class="container">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="index.html" class="logo logo-admin">
                                        <img src="~/images/logo-sm-dark.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold text-white font-18">هل انت مستخدم جديد ام تريد الانضمام لفريق موجود؟</h4>

                                </div>
                            </div>
                            <div class="card-body">
                    

                                    <div class="d-flex justify-content-center m-2">

                                        <a asp-action="Register" asp-controller="Account"  class="btn btn-lg btn-outline-purple m-3 w-75 ">
                                      
                                            إنشاء فريق جديد
                                          <br />
                                            <i class="fas fa-user-plus pt-2 fw-bold " style="font-size:25px"></i>
                                        </a>
                                        <a asp-action="JoinTeam" asp-controller="Account" name="" class="btn btn-lg btn-outline-purple m-3 w-75">
                                            الانضمام لفريق موجود
                                            <br />

                                            <i class="fas fa-users pt-2 fw-bold " style="font-size:25px"></i>
                                        </a>
                                    </div>
                        

                                <div class="card-body bg-light-alt text-center">
                                    <span class="text-muted d-none d-sm-inline-block">
                                        FlowMaster © <script>
                                                           document.write(new Date().getFullYear())
                                        </script>
                                    </span>
                                </div>
                            </div> 
                        </div> 
                    </div> 
                </div> 
            </div> 
        </div> 
 </div>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/waves.js"></script>
        <script src="~/js/feather.min.js"></script>
        <script src="~/js/simplebar.min.js"></script>
</body>
</html>