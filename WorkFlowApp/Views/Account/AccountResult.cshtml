<div class="container" style="margin-top:75px;margin-bottom:42px;">
    @if (ViewBag.SaccessTitle != null || ViewBag.SaccessMessage != null)
    {
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="portlet">
               
                    <div class="portlet-body">
                        <div class="jumbotron">
                            <h1 class="display-6 text-success" style="text-align: center;font-size: 23px;">لقد تم التسجيل بنجاح</h1>
                            <hr />
                            <p class="lead" style="text-align: center;">يرجى التحقق من بريدك الإلكتروني، لقد أرسلنا رابط التأكيد</p>
                            <div class="d-flex justify-content-center">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-purple w-25 my-3 waves-effect waves-light" type="submit">العودة الى الصفحة الرئيسية <i class="fas fa-sign-in-alt ms-1"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    @if (ViewBag.ErrorTitle != null || ViewBag.ErrorMessage != null)
    {
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="portlet">
                    <div class="portlet-body">
                        <div class="jumbotron" style=" background-color: rgb(230 47 5 / 81%)">
                            <h4 class="display-6" style="text-align: center;color: #fff; font-size: 23px;">@ViewBag.ErrorTitle</h4>
                            <hr />
                            <p class="lead" style="text-align: center;color: #fff;font-size: 15px;">@ViewBag.ErrorMessage</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>

