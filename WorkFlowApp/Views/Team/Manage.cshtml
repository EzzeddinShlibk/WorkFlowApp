@model List<TeamViewModel>
<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">
                            أعضاء الفريق
                            <i class="fas fa-users"></i>
                        </h4>
                    </div><!--end col-->
                    <div class="col-lg-6 text-end">
                        <div class="text-end">
                        </div>

                    </div>
                </div>
                <hr class="hr-dashed">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="media mb-3">
                                <img src="~/images/widgets/followers.png" alt="flolwers" height="100" width="100">
                                <div class="row ms-2">
                                    <h5 class="me-0">إستخدم رمز الفريق هذا لدعوة الأشخاص الى فريقك</h5>
                                    <div class="input-group">
                                        @* <input readonly type="text" value="@ViewBag.code" class="form-control" id="myInput" style="width:30px" /> *@
                                        <span id="spanId" class="px-2 py-2" style="font-size:30px;">@ViewBag.code </span>
                                        <button onclick="copyText()" type="submit" class="input-group-text bg-purple text-white p-3 fs-4">
                                          نسخ رابط الدعوة
                                          <i class="far fa-copy text-white fs-4 px-2"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="media-body align-self-center text-truncate ms-3">
                                </div>
                            </div>

                        </div>
                    </div>
               

                    @if (Model.Any())
                    {
                        <h5 >طلبات الإنضمام</h5>
                        <hr class="hr-dashed">
                        if (ViewBag.approvedCount > 0)
                        {
                            <div class="table-responsive">
                                <table class="table mb-0  ">
                                    <thead>
                                        <tr class="text-center">
                                            <th></th>

                                            <th>الاسم</th>
                                            <th>Email</th>
                                            <th>الهاتف</th>
                                            <th>الصلاحية </th>
                                            <th>العمليات</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var user in Model)
                                            {
                                                if (user.isApproved == false)
                                                {
                                                    <tr class="text-center">
                                                        <td class="center">
                                                            @if (user.Pic == "-")
                                                            {
                                                                <img src="~/images/users/profile.png" alt="" class="rounded-circle thumb-xs me-1">
                                                            }
                                                            else
                                                            {
                                                                <img src="~/images/users/@(user.Pic).jpg" alt="" class="rounded-circle thumb-xs me-1">

                                                            }
                                                        <td>
                                                                @user.Name
                                                        </td>
                                                        <td>@user.Email</td>
                                                        <td>@user.phone</td>
                                                            @if (user.isAdmin == 1)
                                                            {
                                                                <td>مدير رئيسي</td>
                                                            }
                                                            else if (user.isAdmin == 2)
                                                            {
                                                                <td>مدير</td>
                                                            }
                                                            else
                                                            {
                                                            <td>عضو</td>

                                                            }
                                                            <td>
                                                            <a class="btn btn-outline-success mx-2" asp-action="AcceptUser" asp-controller="Team" asp-route-UserId="@user.UserId">
                                                                قبول <i class="fas fa-check"></i>
                                                            </a>

                                                            <a asp-action="DeleteUser" asp-controller="Team" asp-route-UserId="@user.UserId" class="btn btn-outline-pink">
                                                                رفض
                                                                <i class="fas fa-times"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }




                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <hr class="hr-dashed">
                            <h6 class="text-center">لايوجد طلبات انضمام </h6>
                            <hr class="hr-dashed">
                        }




                        <h5 >أعضاء الفريق</h5>
                        <hr class="hr-dashed">
                        <div class="table-responsive">
                            <table class="table mb-0  ">
                                <thead>
                                    <tr class="text-center">
                                        <th></th>

                                        <th>الاسم</th>
                                        <th>Email</th>
                                        <th>الهاتف</th>
                                        <th>الصلاحية </th>
                                        <th>العمليات</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var User in Model)
                                        {
                                            if (User.isApproved == true)
                                            {
                                                <tr class="text-center">
                                                    <td class="center">
                                                        @if (User.Pic == "-")
                                                        {
                                                            <img src="~/images/users/profile.png" alt="" class="rounded-circle thumb-xs me-1">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/images/users/@(User.Pic).jpg" alt="" class="rounded-circle thumb-xs me-1">

                                                        }
                                                    <td>
                                                            @User.Name
                                                    </td>
                                                    <td>@User.Email</td>
                                                    <td>@User.phone</td>
                                                        @if (User.isAdmin == 1)
                                                        {
                                                        <td>مدير رئيسي</td>
                                                        <td></td>
                                                        }
                                                        else if (User.isAdmin == 2)
                                                        {
                                                        <td>مدير</td>
                                                        <td>
                                                            <a data-bs-toggle="modal" data-bs-target="#EditUser_@User.UserId" class="btn btn-outline-primary mx-2">
                                                                تعديل
                                                                <i class="far fa-edit"></i>
                                                            </a>
                                                            <a class="btn btn-outline-pink" data-bs-toggle="modal" data-bs-target="#DelteUser_@User.UserId">
                                                                حذف
                                                                <i class="far fa-trash-alt"></i>
                                                            </a>
                                                        </td>
                                                        }
                                                        else
                                                        {
                                                        <td>عضو</td>
                                                        <td>
                                                            <a data-bs-toggle="modal" data-bs-target="#EditUser_@User.UserId" class="btn btn-outline-primary mx-2">
                                                                تعديل
                                                                <i class="far fa-edit"></i>
                                                            </a>
                                                            <a class="btn btn-outline-pink" data-bs-toggle="modal" data-bs-target="#DelteUser_@User.UserId">
                                                                حذف
                                                                <i class="far fa-trash-alt"></i>
                                                            </a>
                                                        </td>

                                                        }
                                    
                                                </tr>


                                                @Html.Partial("_Update", User)
                                         

                                    



                                            }
                                        }
                                    }




                                </tbody>
                            </table>
                        </div>

                    }

                </div>


            </div>


        </div>


    </div>


</div>
 






@section scripts {
    <script>
        function copyText() {
   
            // // الحصول على عنصر span
            var spanElement = document.getElementById("spanId"); // استبدل "spanId" بمعرف العنصر الفعلي

            // إنشاء نطاق اختيار جديد
            var range = document.createRange();

            // تحديد المحتوى داخل النطاق
            range.selectNodeContents(spanElement);

            // نسخ المحتوى المحدد إلى الحافظة
            var selection = window.getSelection();
            selection.removeAllRanges();
            selection.addRange(range);
            document.execCommand("copy");
            alert("تم النسخ بنجاح");
        }
    </script>
}
