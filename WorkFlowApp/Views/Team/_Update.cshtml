@model TeamViewModel
<div class="modal" id="EditUser_@Model.UserId">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-family:Cairo">إدارة المستخدمين</h4>

                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditUser" asp-controller="Team" style="padding:10px 10px;">
                <div class="modal-body">


                    <div class="mb-3">
                        <label class="form-label">الاسم</label>
                        <input asp-for="Name" type="text" readonly class="form-control" value="@Model.Name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">البريد الالكتروني</label>
                        <input asp-for="Email" type="email" readonly class="form-control" value="@Model.Email">
                    </div>
                    <div class="mb-3">


                        <label class="form-label">
                            الصلاحية
                        </label>

                        @if(Model.isAdmin==2){
                            <input value="2" onclick="updateval('3')" id="admin_@Model.UserId" type="radio" class="btn-check" name="role" checked>
                            <label class="btn  btn-outline-primary m-3" for="admin_@Model.UserId">
                                مدير
                            </label>

                            <input value="3" onclick="updateval('2')" id="user_@Model.UserId" type="radio" class="btn-check" name="role" >
                            <label class="btn  btn-outline-primary m-3" for="user_@Model.UserId">
                                عضو
                            </label>
                        }
                        else
                        {
                            <input value="2" onclick="updateval('3')" id="admin_@Model.UserId" type="radio" class="btn-check" name="role" >
                            <label class="btn  btn-outline-primary m-3" for="admin_@Model.UserId">
                                مدير
                            </label>

                            <input value="3" onclick="updateval('2')" id="user_@Model.UserId" type="radio" class="btn-check" name="role" checked>
                            <label class="btn  btn-outline-primary m-3" for="user_@Model.UserId">
                                عضو
                            </label>
                        }
               

              

                   
        @*                 @Html.RadioButtonFor(m => m.isAdmin, "3", new { @class = "btn-check", @id = "admin_" + Model.UserId, @autocomplete = "off", @checked = "checked", @name = "role" })
                        <label class="btn  btn-outline-primary m-3" for="admin_@Model.UserId">
                            عضو
                        </label>

                        @Html.RadioButtonFor(m => m.isAdmin, "2", new { @class = "btn-check", @id = "user_" + Model.UserId, @autocomplete = "off", @name = "role" })
                        <label class="btn  btn-outline-primary m-3" for="user_@Model.UserId">
                            مدير
                        </label>
 *@
                    </div>
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-outline-success">تعديل</button>
                    <input type="hidden" value="@Model.UserId" asp-for="UserId" />


                </div>


            </form>
        </div>
    </div>
</div>

<div class="modal" id="DelteUser_@Model.UserId">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-family:Cairo">إدارة المستخدمين</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>

            </div>
            <div class="modal-body mb-2">
                <h6>هل تريد حذف المستخدم @Model.Name</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">إغلاق</button>
                <a  class="btn btn-outline-success" asp-action="DeleteUser" asp-controller="Team" asp-route-UserId="@Model.UserId">موافق</a>
            </div>

        </div>


    </div>
</div>
<div class="modal" id="AcpUser_@Model.UserId">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-family:Cairo">إدارة المستخدمين</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>

            </div>
            <div class="modal-body mb-2">
                <h6>هل تريد قبول المستخدم  @Model.Name  للانضمام للفريق</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">إغلاق</button>
                <a  class="btn btn-outline-success" asp-action="AcceptUser" asp-controller="Team" asp-route-UserId="@Model.UserId">موافق</a> 
            </div>

        </div>


    </div>
</div>
<div class="modal" id="DirUser_@Model.UserId">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-family:Cairo">إدارة المستخدمين</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>

            </div>
