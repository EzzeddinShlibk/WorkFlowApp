@model SiteState

@{
    ViewData["Title"] = "Site State";
}
<div class="content ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- BEGIN Portlet -->
                <div class="portlet">
                    <div class="portlet-header portlet-header-bordered">
                        <h3 class="portlet-title">حالة الموقع</h3>
                    </div>
                    <div class="portlet-body">
                        <div class="col-md-6">
                            @if (@Model.State == true)
                            {
                                <div class="alert alert-success" style="text-align:center">
                                    <p>هذا الموقع الإلكتروني فعال الان</p>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger" style="text-align:center">
                                    <p>هذا الموقع الإلكتروني مغلق الان</p>
                                </div>
                            }
                        <form asp-action="SiteState">

                            <div class="form-group">
                                <input type="submit" name="Save" value="تفعيل الموقع" class="btn btn-success" />|
                                <input type="submit" name="Save" value="إلغاء تفعيل الموقع" class="btn btn-danger" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ClosingMessage" class="control-label"></label>
                                <textarea type="text" asp-for="@Model.ClosingMessage" class="form-control" style="height:150px;"></textarea>
                            </div>
                            <div class="form-group">
                                    <input type="submit" asp-action="SiteStateUpdate" name="Save" value="تحديث رسالة الإغلاق" class="btn btn-primary" />
                            </div>
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success" style="text-align:center">
                                    <p>@ViewBag.Message</p>
                                </div>
                            }

                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <label asp-for="CreatedDate">تاريخ الانشاء </label>
                                    @Html.DisplayFor(model => model.CreatedDate)
                                    <br />
                                    @if (Model.ModifiedDate != null)
                                    {<label asp-for="CreatedDate">تاريخ التعديل</label>
                                    @Html.DisplayFor(model => model.ModifiedDate)
                                }
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
