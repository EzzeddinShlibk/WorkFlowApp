@model SiteState  

@{
    ViewBag.Title = "Closing";
}

<div class="container" style="margin-top:100px;text-align:center">

    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            @if (Model != null)
            {
                @Model.ClosingMessage 
            }
            else
            {
                <p>The site is temporarily closed for development</p>
            }
        </div>
    </div>

</div>