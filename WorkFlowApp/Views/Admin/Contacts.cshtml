@model Contact
<div class="content ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
          
                <div class="portlet">
                    <div class="row mt-3">
                        <div class="col-lg-6">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h4 class="mt-0">بيانات التواصل <span class="badge badge-pink">6</span></h4>
                                </li>
                            </ul>
                        </div>
 
                    </div>
                    <div class="portlet-body">


                        <form asp-controller="Admin" asp-action="Contacts" asp-route-id="@Model.Id">
                            <input type="hidden" asp-for="@Model.Id" />
                            <input type="hidden" asp-for="@Model.CreatedDate" />
                            <div class="form-row g-1">
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Address">العنوان </label>
                                    <input asp-for="Address" type="text" class="form-control form-control">
                                    <span class="text-danger" asp-validation-for="Address"></span>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Email1">البريد الإلكتروني 1</label>
                                    <input asp-for="Email1" type="text" class="form-control form-control">
                                    <span class="text-danger" asp-validation-for="Email1"></span>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Email2">البريد الإلكتروني 2</label>
                                    <input asp-for="Email2" type="text" class="form-control form-control">
                                    <span class="text-danger" asp-validation-for="Email2"></span>

                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Phone1">رقم هاتف 1</label>
                                    <input asp-for="Phone1" type="text" class="form-control form-control">
                                    <span class="text-danger" asp-validation-for="Phone1"></span>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Phone2">رقم هاتف 2</label>
                                    <input asp-for="Phone2" type="text" class="form-control form-control">
                                    <span class="text-danger" asp-validation-for="Phone2"></span>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Facebook">الفيسبوك</label>
                                    <input asp-for="Facebook" type="text" class="form-control form-control">
                                    <span class="text-danger" asp-validation-for="Facebook"></span>
                                </div>
                     
                            </div>


                            <button class="btn btn-soft-primary btn-lg" type="submit">حفظ</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}